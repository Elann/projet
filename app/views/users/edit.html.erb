<h1>Edition du profil</h1>

<%= form_for(@user) do |f| %>
  <%= render 'shared/messages_erreurs', :object => f.object %>
  <div class="field">
    <%= f.label :nom, "Nom" %><br />
    <%= f.text_field :nom %>
  </div>
  <div class="field">
    <%= f.label :prenom, "Prénom" %><br />
    <%= f.text_field :prenom %>
  </div>
  <div class="field">
    <%= f.label :promo, "Promotion" %><br />
    <%= f.text_field :promo %>
  </div>
  <div class="field">
    <%= f.label :email, "Email" %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :tel, "Numéro de téléphone" %><br />
    <%= f.text_field :tel %>
  </div>
  <div class="field">
    <%= f.label :password, "Mot de passe" %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, "Confirmation"%><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="actions">
    <%= f.submit "Enregistrer" %>
  </div>
<% end %>

<div>
  <%= gravatar_for @user %>
  <a href="http://gravatar.com/emails">changer</a>
</div>
